<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.tugaslogin.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/f"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="Input Your Profile"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/h"
            android:layout_width="345sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:hint="Name User"
            android:textSize="30sp"
            />

        <EditText
            android:layout_width="345sp"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textSize="30sp"
            android:layout_marginLeft="40dp"
            />

        <Button
            android:id="@+id/k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m"
            android:layout_margin="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="30sp"
            android:text="Login"
            android:textSize="30sp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="remember me"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_toRightOf="@+id/j"
            android:text="forget password" />


        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/g"
            android:text="SingUp"
            android:textSize="15dp" />


    </LinearLayout>




</LinearLayout>